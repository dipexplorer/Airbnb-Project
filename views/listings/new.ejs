<%- layout("/layouts/boilerplate") %>

    <body>
        <div class="container form-container">
            <h1 class="mb-7">Add New Listing</h1>
            <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" class="form-control" id="title" name="listings[title]" required>
                    <div class="invalid-feedback">
                        Title required. </div>
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea class="form-control" id="description" name="listings[description]" rows="3"
                        required></textarea>
                    <div class="invalid-feedback">
                        Description required. </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="price">Price per Night (&#8377;):</label>
                        <input type="number" class="form-control" id="price" name="listings[price]" required>
                        <div class="invalid-feedback">
                            Price required. </div>
                    </div>
                    <div class="form-group">
                        <label for="location">Location:</label>
                        <input type="text" class="form-control" id="location" name="listings[location]" required>
                        <div class="invalid-feedback">
                            Location required. </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="Country">Country:</label>
                        <input type="text" class="form-control" id="Country" name="listings[country]" required>
                        <div class="invalid-feedback">
                            Country required. </div>
                    </div>
                    <!-- <div class="form-group">
                        <label for="image">Image URL:</label>
                        <input type="text" class="form-control" id="image" name="listings[image]" required>
                    </div> -->
                </div>
                <div class="form-group">
                    <label for="image">Upload Listing Image:</label>
                    <input type="file" class="form-control" id="image" name="listings[image]" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>

    </body>